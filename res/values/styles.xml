<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppTheme" parent="android:Theme.Light">
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 设置没有标题 -->
        <!-- <item name="android:background">@color/backgroud_color</item> -->
        <!--
          <item name="android:textSize">20sp</item>   设置文本大小
          <item name="android:textColor">#F34141</item>




        -->
        <!-- 设置activity切换动画 -->
        <!-- <item name="android:windowAnimationStyle">@style/activityAnimation</item> -->
        <item name="android:windowBackground">@color/backgroud_color</item>
        <!-- android:configChanges="locale|orientation" -->
        <!--
        <item name="android:configChanges">locale|orientation</item>
         =""
        <item name="android:screenOrientation">portrait</item>



        -->
    </style>

   
    
    <style name="loading_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- <item name="android:backgroundDimEnabled">true</item> 定义灰色透明背景 -->
        <item name="android:backgroundDimAmount">0.2</item>
        <!-- android:backgroundDimAmount就是用来控制灰度的值 dialog以外的区域是黑色的，完全看不到其他内容，系统的默认值是0.5 -->

    </style>
    
    <style name="Dialog" parent="android:style/Theme.Dialog">  
        <item name="android:background">#00000000</item>  
        <item name="android:windowBackground">@android:color/transparent</item>  
        <item name="android:windowNoTitle">true</item>  
        <item name="android:windowIsFloating">true</item>  
    </style> 
    
    <!-- dialog风格 -->
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 无边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>
    
        <!-- 自定义请求dialog的风格 -->
    <style name="RequestDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊背景 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题显示 -->
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="Theme" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!-- TabHost标签按钮样式 -->
    <style name="tab_button_bottom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">marquee</item>
        <!-- 内部组件的排列 -->
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">#fff</item>
        <item name="android:layout_marginTop">0.0dip</item>
        <!-- 设置RadioButton的原来图片为空 -->
        <item name="android:button">@null</item>
        <!-- 顶部的空隙 -->
        <item name="android:paddingTop">0dp</item>

        <!-- 底部的空隙 -->
        <item name="android:paddingBottom">0.0dip</item>
        <item name="android:drawablePadding">1.0dip</item>
        <!-- 与其他组件宽度占相同比重 -->
        <item name="android:layout_weight">1.0</item>
        <item name="android:singleLine">false</item>
    </style>

    

</resources>
