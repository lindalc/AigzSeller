<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="#EEEEEE"
    tools:context=".ReserationDetailActivity" >

	 <!-- 标题栏 -->
    <include
        android:id="@+id/title_layout"
        layout="@layout/title_layout" />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:paddingLeft="20dp"
           >
            <TextView 
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textColor="#A5A5A5"
                android:textSize="@dimen/sixteen"
                android:text="@string/reserationdetail_action"/>
            <TextView
                android:id="@+id/activity_reserationdetail_action" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/sixteen"
                android:text="@string/reserationdetail_action"/>
        </LinearLayout>
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33666666"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:paddingLeft="20dp"
           >
            <TextView 
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textColor="#A5A5A5"
                android:textSize="@dimen/sixteen"
                android:text="@string/reserationdetail_datetime"/>
            <TextView 
                android:id="@+id/activity_reserationdetail_datetime" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/sixteen"
                android:text="@string/reserationdetail_datetime"/>
        </LinearLayout>
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33666666"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:paddingLeft="20dp"
           >
            <TextView 
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textColor="#A5A5A5"
                android:textSize="@dimen/sixteen"
                android:text="@string/reserationdetail_personnumber"/>
            <TextView 
                android:id="@+id/activity_reserationdetail_personnumber" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/sixteen"
                android:text="@string/reserationdetail_personnumber"/>
        </LinearLayout>
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33666666"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:paddingLeft="20dp"
           >
            <TextView 
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textColor="#A5A5A5"
                android:textSize="@dimen/sixteen"
                android:text="@string/reserationdetail_otherinfo"/>
            <TextView 
                android:id="@+id/activity_reserationdetail_otherinfo" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/sixteen"
                android:text="@string/reserationdetail_otherinfo"/>
        </LinearLayout>
        
    </LinearLayout>
    
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:paddingLeft="10dp"
           >
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/title_back"/>
            <TextView 
                android:id="@+id/activity_reserationdetail_username" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/sixteen"
                android:text="@string/reserationdetail_datetime"/>
        </LinearLayout>
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33666666"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:paddingLeft="10dp"
           >
        	<ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/title_back"/>
            <TextView 
                android:id="@+id/activity_reserationdetail_mobile" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/sixteen"
                android:text="@string/reserationdetail_personnumber"/>
        </LinearLayout>
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33666666"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:paddingLeft="10dp"
           >
             <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/title_back"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/orange"
                android:textSize="@dimen/sixteen"
                android:text="@string/reserationdetail_detail"/>
    	</LinearLayout>
    </LinearLayout>

</LinearLayout>
